# Auto-create and activate local venv via uv, then load .env if present

if [ ! -d .venv ]; then
  if command -v uv >/dev/null 2>&1; then
    uv venv
  else
    python -m venv .venv
  fi
fi

# Activate the environment
source .venv/bin/activate

# Load environment variables from .env if it exists
dotenv_if_exists

